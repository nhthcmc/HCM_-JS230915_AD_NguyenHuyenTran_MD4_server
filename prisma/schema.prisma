generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = "mysql://root:@127.0.0.1:3306/advanced"
}

model category {
    id   Int    @id @default(autoincrement())
    name String @db.Char(50)
}

model question {
    id         Int      @id @default(autoincrement())
    category   category @relation(fields: [categoryId], references: [id])
    created_at String
    content    String
    level      Int
}

model answer {
    id         Int    @id @default(autoincrement())
    is_answer  String
    content    String
    created_at String
}
